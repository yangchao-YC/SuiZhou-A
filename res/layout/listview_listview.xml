<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
 
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/List_listview_Image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dip"
            
            android:src="@drawable/home1" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dip"
            android:layout_toLeftOf="@+id/List_listview_a"
            android:layout_toRightOf="@+id/List_listview_Image"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/List_listview_Text_Title"
                android:layout_width="fill_parent"
       			android:layout_height="wrap_content"
       		    android:layout_marginTop="10dp"
        		android:layout_marginLeft="1dp"
        		android:layout_marginRight="1dp"
        		android:textColor="@android:color/black"
       		    android:textSize="16dp"
       		    android:maxLines="2"
       		    android:singleLine="true"
				android:text="yyyyyeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeee"/>
            
              <TextView
                android:id="@+id/List_listview_Text_Time"
                android:layout_width="fill_parent"
       			android:layout_height="wrap_content"
        		android:textColor="#70000000"
       		    android:textSize="12dp"
       		    android:maxLines="2"
       		    android:layout_alignParentLeft="true"
				android:text="yyyyy"/>
              <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:layout_marginTop="5dp"
        		android:layout_marginLeft="1dp"
        		android:layout_marginRight="1dp"
        		android:orientation="horizontal">
            <TextView
                android:id="@+id/List_listview_Text_content"
                android:layout_width="wrap_content"
       			android:layout_height="wrap_content"
       			android:layout_marginRight="5dp"
        		android:textColor="#70000000"
        		android:layout_alignParentRight="true"
       		    android:textSize="12dp"
				android:text="yyyyy"/>
            </RelativeLayout>
           
            
        </LinearLayout>


		<LinearLayout 
		    android:id="@+id/List_listview_a"
		    android:layout_width="10dp"
            android:layout_height="65dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            
            android:layout_marginRight="5dip">
        <ImageView 
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:src="@drawable/list_arrow" 
            />
        </LinearLayout>
    </RelativeLayout>
	<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/line" >
	</LinearLayout>
</LinearLayout>